<%include partials/header%>
<div class="container">
    <div id="main-container" class="jumbotron">
        <h2 class="text-center">New NoSpyAcc</h2>
        <hr class="my-4">
        <div class="container mid">
            <div class="row">
                <div class="col-md-1"> </div>
                <div class="col-md-5"> 
                    <form action="/newname" method="GET">
                        <div class="form-control mr-sm-2">
                            <div class="text-show-field">
                                <%if(shownUserInfo) {%>
                                    <%=shownUserInfo.userName%>
                                <%}%>
                            </div>
                        </div>
                </div>
                <div class="col-md-4"> 
                        <button class="btn btn-outline-primary">New Username</button>
                    </form>
                </div>
                <div class="col-md-2"> </div>
            </div>
            
            <div class="row empty-mid-row"><div class="col-md-12"></div></div>

            <div class="row">
                <div class="col-md-1"> </div>
                <div class="col-md-5"> 
                    <form action="/newpassword" method="GET">
                        <div class="form-control mr-sm-2">
                            <div class="text-show-field">
                                <%if(shownUserInfo) {%>
                                    <%=shownUserInfo.userPassword%>
                                <%}%>
                            </div>
                        </div>
                </div>
                <div class="col-md-4"> 
                        <button class="btn btn-outline-primary">New Password</button>
                    </form>
                </div>
                <div class="col-md-2"> </div>
            </div>

            <div class="row empty-mid-row"><div class="col-md-12"></div></div>

            <div class="row">
                <div class="col-md-1"> </div>
                <div class="col-md-5"> 
                    <form action="/newcolor" method="GET">
                        <div id="color-combination">
                            <div id="color1"><%=shownUserInfo.color1%></div>
                            <div id="color2"><%=shownUserInfo.color2%></div>
                        </div>
                </div>
                <div class="col-md-4"> 
                        <button class="btn btn-outline-primary">New Colors</button>
                    </form>
                </div>
                <div class="col-md-2"> </div>
            </div>
        </div>
        <div class="form-group">
            <div class="text-center"> 
                <form action="/new" method="POST">
                    <button class="btn btn-primary btn-lg">Submit</button>
                </form>
            </div>
        </div>
        <hr class="my-4">
        <div class="text-center"> 
            <form action="/" action="/" method="GET">
                <button class="btn btn-primary mb-2">Back to Login Page</button>
            </form>
        </div>
    </div>
</div>
<script src="/scripts/new.js"></script>
<%include partials/footer%>