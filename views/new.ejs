<%include partials/header%>
<div class="container">
    <div class="jumbotron">
        <h2 class="text-center">New NoSpyAcc</h2>
        <hr class="my-4">
        <div class="container mid">
            <div class="form-group">
                <div class="text-center">
                    <form class="form-inline" action="/newname" method="GET">
                        <div class="form-control mr-sm-2">
                            <div class="text-show-field">
                                <%if(userInfo) {%>
                                <%=shownUserInfo.userName%>
                                <%}%>
                            </div>
                        </div>
                        <button class="btn btn-outline-success">New Username</button>
                    </form>
                    <form class="form-inline" action="/newpassword" method="GET">
                        <div class="form-control mr-sm-2">
                            <div class="text-show-field">
                                <%if(userInfo) {%>
                                <%=shownUserInfo.userPassword%>
                                <%}%>
                            </div>
                        </div>
                        <button class="btn btn-outline-success">New Password</button>
                    </form>
                </div>

            </div>
        </div>
        <div class="form-group">
            <div class="text-center"> 
                <form action="/new" method="POST">
                    <button class="btn btn-primary btn-lg">Submit</button>
                </form>
            </div>
        </div>
        <hr class="my-4">
        <div class="text-center"> 
            <form action="/" action="/" method="GET">
                <button class="btn btn-primary mb-2">Back to Login Page</button>
            </form>
        </div>
    </div>
</div>

<%include partials/footer%>